<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--白色矩形 作为背景色-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!--单独的slogan图片 并且设置下间距-->
    <item android:top="@dimen/common_text_size_20">
        <!--位置设置成靠下-->
        <bitmap
            android:gravity="top"
            android:src="@drawable/feedback_head_image" />
    </item>

    <!--单独的slogan图片 并且设置下间距-->
    <item android:bottom="@dimen/common_text_size_20">
        <!--位置设置成靠下-->
        <bitmap
            android:gravity="center"
            android:src="@drawable/bg_login_top" />
    </item>
</layer-list>
